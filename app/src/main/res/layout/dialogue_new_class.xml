<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_class_new_classLogo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@android:drawable/ic_menu_camera"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp">

            <EditText
                android:id="@+id/et_class_new_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"/>

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/et_class_new_teacher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teacher"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Switch
        android:id="@+id/sw_class_new_autoJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Auto Join"
        android:layout_marginTop="8dp"
        android:checked="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turning Auto Join off will require the teacher to accept join requests manually."
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        android:layout_gravity="center_horizontal"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/et_class_new_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"/>



    </com.google.android.material.textfield.TextInputLayout>


</LinearLayout>