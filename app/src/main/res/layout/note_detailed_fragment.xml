<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_note_frag_verse_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="verse"
            android:paddingEnd="8dp"
            />
    <TextView
        android:id="@+id/tv_note_frag_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date" />




    </LinearLayout>


    <TextView
        android:id="@+id/tv_note_frag_verse_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let there be light"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_note_frag_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Title"/>



    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_note_frag_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note"/>



    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_note_frag_note_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/noteType"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_note_frag_note_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"/>



</LinearLayout>