<?xml version="1.0" encoding="utf-8"?>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       android:padding="15dp">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            android:labelFor="@+id/tv_student_frag_username"/>

        <TextView
            android:id="@+id/tv_student_frag_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:labelFor="@+id/tv_student_frag_name"/>

            <TextView
                android:id="@+id/tv_student_frag_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:labelFor="@+id/tv_student_frag_lastname"/>

            <TextView
                android:id="@+id/tv_student_frag_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name" />
    </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:labelFor="@+id/tv_student_frag_email"/>

    <TextView
        android:id="@+id/tv_student_frag_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email" />
</LinearLayout>